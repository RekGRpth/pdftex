#### Start of system configuration section. ####

srcdir = @srcdir@
VPATH  = $(srcdir)

SHELL = /bin/sh

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
scriptdir = $(bindir)
texmf = @texmfmain@

NCURSESDIR=libs/ncurses
ZLIBDIR=libs/zlib
LIBPNGDIR=libs/libpng
LIBT1DIR=libs/t1lib
LIBTYPE1DIR=$(LIBT1DIR)/../type1
LIBXPDFDIR=libs/xpdf
FREETYPEDIR=libs/freetype

#### End of system configuration section. ####

ALLPROGS = access afm2tfm bg5conv bibtex bibtex8 cef5conv cefconv cefsconv \
  cfftot1 ctangle cweave detex devnag disdvi dmp dt2dv dv2dt dvi2tty \
  dvibook dviconcat dvicopy dvidvi dvilj dvilj2p dvilj4 dvilj4l dvipdfm \
  dvips dviselect dvitodvi dvitomp dvitype ebb eomega epsffit etex extconv \
  gftodvi gftopk gftype gsftopk hbf2gf info infokey install-info kpsestat \
  kpsewhich lacheck mag makeindex makeinfo mf mf-nowin mft mmafm mmpfb \
  mpost mpto musixflx newer odvicopy odvips odvitype omega omfonts otangle \
  otfinfo otftotfm otp2ocp outocp patgen pdfetex pdftex pfb2pfa pk2bm \
  pktogf pktype pltotf pooltype ps2pk psbook psnup psresize psselect \
  pstops readlink sjisconv t1ascii t1asm t1binary t1disasm t1dotlessj \
  t1lint t1mac t1testpage t1unmac t4ht tangle tcdialog tex tex4ht texindex \
  tftopl tie ttf2afm ttf2pk ttf2tfm vftovp vptovf weave xdvi-motif.bin

# Subdirectories that have makefiles
ESUBDIRS = @ESUBDIRS@ texk
LIBSDIRS = @LIBSDIRS@

default: all
install: all 
	for dir in $(ESUBDIRS); do \
	   echo making $@ in $$dir; \
	     (cd $$dir && PATH=$(scriptdir):$(bindir):$(PATH) \
                $(MAKE) $@) || exit 1; \
	done
@FMU@
@FMU@texmf-setup:
	$(srcdir)/selfautofix "$(bindir)" "$(texmf)/web2c"
	cd $(bindir); for i in $(ALLPROGS); do test -f $$i && echo strip $$i && strip $$i || true; done
	if test -f $(scriptdir)/mktexlsr; then \
	  TEXMFMAIN=$(texmf) PATH=$(scriptdir):$(bindir):$(PATH) \
	    $(scriptdir)/mktexlsr; \
	else :; fi
	if test -f $(scriptdir)/fmtutil; then \
	  TEXMFMAIN=$(texmf) PATH=$(scriptdir):$(bindir):$(PATH) \
	    $(scriptdir)/fmtutil --all; \
	else :; fi
	if test -f $(scriptdir)/texlinks; then \
	  TEXMFMAIN=$(texmf) PATH=$(scriptdir):$(bindir):$(PATH) \
	    $(scriptdir)/texlinks; \
	else :; fi

install-exec:
	for dir in $(ESUBDIRS); do \
	   echo making $@ in $$dir; \
	   (cd $$dir && PATH=$(scriptdir):$(bindir):$(PATH) \
              $(MAKE) $@) || exit 1; \
	done
	cd $(bindir); for i in $(ALLPROGS); do test -f $$i && echo strip $$i && strip $$i || true; done
	if test -f $(scriptdir)/texlinks; then \
	  TEXMFMAIN=$(texmf) PATH=$(scriptdir):$(bindir):$(PATH) \
	    $(scriptdir)/texlinks; \
	else :; fi

strip:

check:
	cd texk; TEXMF=$(texmf) TEXMFCNF=$(texmf)/web2c $(MAKE) $@

uninstall:
	for dir in $(ESUBDIRS); do \
	  echo making $@ in $$dir; \
	  (cd $$dir && $(MAKE) $@) || exit 1; \
	done

Makefile: Makefile.in config.status
	$(SHELL) ./config.status

all: @LIBSDEP@
all clean mostlyclean:
	for dir in $(ESUBDIRS); do \
	  echo making $@ in $$dir; \
	  (if test -f $$dir/Makefile; then cd $$dir && $(MAKE) $@; else true; fi) || exit 1; \
	done

libsclean:
	libsdirs="$(LIBSDIRS)"; \
	  for dir in $$libsdirs; do \
	    echo making clean in $$dir; \
	    (if test -f $$dir/Makefile; then cd $$dir && $(MAKE) clean; else true; fi) || exit 1; \
	  done

libsdistclean:
	libsdirs="$(LIBSDIRS)"; \
	  for dir in $$libsdirs; do \
	    echo making distclean in $$dir; \
	    (if test -f $$dir/Makefile; then cd $$dir && $(MAKE) distclean; else true; fi) || exit 1; \
	  done

distclean: clean
	for dir in $(ESUBDIRS); do \
	  echo making $@ in $$dir; \
	  (if test -f $$dir/Makefile; then cd $$dir && $(MAKE) $@; else true; fi) || exit 1; \
	done
	rm -f Makefile *.status *.cache *.log dialogconfig.h TAGS
	rm -f libs/klibtool.config libs/config.log libs/config.status libs/config.cache
	rm -f utils/texinfo/info/funs.h utils/texinfo/info/doc.c utils/texinfo/info/key.c

tags TAGS:
	rm -f TAGS
	find . -name '*.[ch]' -print | xargs etags --append -o TAGS


clean mostlyclean: libsclean
distclean: libsdistclean
realclean: distclean
world: all install
pdftex:
	cd texk/web2c; $(MAKE) pdftex
	test -f texk/web2c/pdftex && ls -l texk/web2c/pdftex

$(NCURSESDIR)/lib/libncurses.a:
	cd $(NCURSESDIR); $(MAKE)
$(ZLIBDIR)/libz.a:
	cd $(ZLIBDIR); $(MAKE) libz.a
$(LIBPNGDIR)/libpng.a:
	cd $(LIBPNGDIR); $(MAKE) libpng.a
$(LIBT1DIR)/libt1.a:
	cd $(LIBT1DIR); $(MAKE) libt1.a
$(LIBTYPE1DIR)/libtype1.a:
	cd $(LIBTYPE1DIR); $(MAKE) libtype1.a
$(LIBXPDFDIR)/xpdf/libxpdf.a:
	cd $(LIBXPDFDIR)/xpdf; $(MAKE) libxpdf.a
$(LIBXPDFDIR)/goo/libGoo.a:
	cd $(LIBXPDFDIR)/goo; $(MAKE) libGoo.a
$(FREETYPEDIR)/lib/.libs/libttf.a:
	cd $(FREETYPEDIR); $(MAKE)

# Prevent GNU make v3 from overflowing arg limit on SysV.
.NOEXPORT:
